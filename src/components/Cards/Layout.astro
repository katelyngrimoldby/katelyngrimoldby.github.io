---
import Image from 'astro/components/Image.astro';
import type { ImageMetadata } from 'astro';
import Tags from '../Tags.astro';

interface Props {
  href: string;
  imgSrc: ImageMetadata;
  imgAlt: string;
  tags: string[];
}

const { href, imgSrc, imgAlt, tags } = Astro.props;
---

<article>
  <a href={href}>
    <Image
      src={imgSrc}
      alt={imgAlt}
    />
    <slot />
    <Tags tags={tags} />
  </a>
</article>

<style>
  article {
    display: block;
    width: 100%;
    max-width: 500px;
    padding: 1rem;
    background-color: var(--background-secondary);
    border-radius: 20px;
    scroll-snap-align: center;
  }

  a {
    color: var(--foreground-primary);
  }

  img {
    width: 100%;
    height: auto;
    margin-block: 0.25rem;
  }
</style>
